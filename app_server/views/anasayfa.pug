extends layout

block content
    body
        #banner.page-header
            .row
                .col-lg-10
                    h1
                        small &nbsp; Keşfet

        .row
            .col-lg-2
                // Sidebar başlangıcı
                
                ul.list-group
                    li.list-group-item
                        a(href="#") Menü Öğesi 1
                    li.list-group-item
                        a(href="#") Menü Öğesi 2
                    li.list-group-item
                        a(href="#") Menü Öğesi 3
                // Sidebar bitişi

            .col-lg-10
                each post in postlar
                    .row.list-group
                        .col-xs-12.col-sm-12
                            .col-xs-12.list-group-item
                                // Kullanıcı fotoğrafı ve adını içeren konteyner
                                .user-info-container
                                    // Kullanıcı fotoğrafı ekleniyor
                                    img(src='/images/'+post.userPhotoId+".jpg", alt='Default User Photo', class='user-photo', style='width: 50px; height: 50px;')
                                    // Kullanıcı adı ekleniyor
                                    h4
                                        a(href="/"+post.userId)=post.ad

                                h3
                                    p= post.post
                                h5
                                    p= post.tarih
                                
                                if post.yorumlar.length > 0
                                    a(href='/postdetay/'+post.postId) Yorumları Görüntüle
                                else
                                    p Henüz bu post için hiç yorum yapılmamış.
